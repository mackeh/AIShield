{
  "name": "aishield-vscode-extension",
  "displayName": "AIShield",
  "description": "AIShield security diagnostics for AI-generated code in VS Code.",
  "version": "0.1.0",
  "publisher": "aishield",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:aishield.scanWorkspace",
    "onCommand:aishield.scanCurrentFile",
    "onCommand:aishield.clearDiagnostics",
    "onCommand:aishield.refreshFindings",
    "onCommand:aishield.applyFixForFinding",
    "onCommand:aishield.openFinding",
    "onView:aishield.findings",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aishield.scanWorkspace",
        "title": "AIShield: Scan Workspace"
      },
      {
        "command": "aishield.scanCurrentFile",
        "title": "AIShield: Scan Current File"
      },
      {
        "command": "aishield.clearDiagnostics",
        "title": "AIShield: Clear Diagnostics"
      },
      {
        "command": "aishield.refreshFindings",
        "title": "AIShield: Refresh Findings"
      },
      {
        "command": "aishield.applyFixForFinding",
        "title": "AIShield: Apply Fix"
      },
      {
        "command": "aishield.openFinding",
        "title": "AIShield: Open Finding"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aishield.findings",
          "name": "AIShield Findings"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aishield.scanWorkspace",
          "when": "view == aishield.findings",
          "group": "navigation"
        },
        {
          "command": "aishield.refreshFindings",
          "when": "view == aishield.findings",
          "group": "navigation@1"
        },
        {
          "command": "aishield.clearDiagnostics",
          "when": "view == aishield.findings",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "AIShield",
      "properties": {
        "aishield.cliCommand": {
          "type": "string",
          "default": "cargo run -p aishield-cli --",
          "description": "Command prefix used to invoke AIShield CLI."
        },
        "aishield.extraScanArgs": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Extra arguments appended to scan commands."
        },
        "aishield.minSeverity": {
          "type": "string",
          "default": "low",
          "enum": [
            "critical",
            "high",
            "medium",
            "low",
            "info"
          ],
          "description": "Minimum severity for diagnostics."
        },
        "aishield.useOnnx": {
          "type": "boolean",
          "default": false,
          "description": "Enable ONNX AI-likelihood scoring mode."
        },
        "aishield.onnxModelPath": {
          "type": "string",
          "default": "",
          "description": "Path to ONNX model file used when useOnnx=true."
        },
        "aishield.scanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run AIShield scan on file save."
        },
        "aishield.securityLens": {
          "type": "boolean",
          "default": false,
          "description": "Highlight medium/high/critical lines in editors after scan."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^20.17.17",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.7.3"
  }
}
